<%- include("partials/header") %>


<h1>Compose</h1>
<form class="" action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" name="title" id="postTitle" class="form-control">
    </div>
    <div class="form-group">
        <label for="postContent">Content</label>
        <textarea name="content" id="postContent" rows="8" class="form-control"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") %>
